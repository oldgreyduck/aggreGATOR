{
  "name": "Codespace + PostgreSQL",
  "features": {
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "16.10",
      "password": "postgres",
      "database": "gator"
    }
  },
  "forwardPorts": [5432],
  "remoteEnv": {
    "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/appdb"
  },
  "portsAttributes": {
    "5432": { "label": "PostgreSQL", "onAutoForward": "silent", "requireLocalPort": true }
  }
}
